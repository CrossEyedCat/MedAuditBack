apiVersion: v1
kind: Secret
metadata:
  name: medaudit-secrets
  namespace: medaudit
type: Opaque
stringData:
  # PostgreSQL
  POSTGRES_USER: "medaudit"
  POSTGRES_PASSWORD: "CHANGE_ME_STRONG_PASSWORD"
  POSTGRES_DB: "medaudit_db"
  
  # JWT Secret Key
  SECRET_KEY: "CHANGE_ME_GENERATE_STRONG_SECRET_KEY"
  
  # NLP Service API Key (optional)
  NLP_SERVICE_API_KEY: ""

---
# Инструкция по созданию секретов:
# 
# 1. Скопируйте этот файл: cp k8s/secrets.yaml.example k8s/secrets.yaml
# 2. Замените все значения CHANGE_ME_* на реальные значения
# 3. Для генерации SECRET_KEY используйте:
#    python -c "import secrets; print(secrets.token_urlsafe(32))"
# 4. Примените секреты: kubectl apply -f k8s/secrets.yaml
# 
# ВАЖНО: Не коммитьте k8s/secrets.yaml в git!



